<h1>All Notes</h1>

<%= link_to "Create New Note", new_note_path, class: "btn btn-primary" %>

<ul>
  <% @notes.each do |note| %>
    <li>
      <%= link_to note.title, note_path(note) %> |
      <%= link_to "Edit", edit_note_path(note) %> |
      <%= link_to "Delete", note_path(note), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
